/* pages/activityDetail/index.wxss */
@import "../../wxParse/wxParse.wxss";
page{
  font-size:24rpx;
  line-height: 1;
  color:#333;
}
.actImg{
  width:100%;
  height:auto;
}
.actImg image{
  width:100%;
  height:1;
  display:block;
}
.act-pp{
  line-height:43rpx;
  padding:0 30rpx;
}
.act-title{
  font-weight: bolder;
  font-size:28rpx;
  padding:32rpx 30rpx 18rpx;
  display: flex;
  justify-content:space-between;
  box-sizing:border-box;
  -moz-box-sizing:border-box; 
  -webkit-box-sizing:border-box; 
}
.title-header{
  flex:1;
  margin-right:20rpx;
}
.title-more{
  color:#1674bb;
  font-size:24rpx;
}
.act-line{
  border-bottom:1px dashed #b2b2b2;
  margin-top:28rpx;
}
.act-title2{
  line-height: 90rpx;
  padding:0 30rpx;
  font-weight: bolder;
  font-size:28rpx;
}
.atttion-btn-view{
  position: fixed;
  bottom:0;
  width:100%;
  border-top:1px solid #e8e8e8;
}
button{
 background:#fff;
 color:#1574bb;
 border-radius:0;
}
.button-hover {
  background-color: #fff;
}
button::after {
  border: 0;
}
.bg{
  background: #b2b2b2;
  color:#000;
}
.bg_1{
  color:#666;
}
.wxParse {
  padding:0 30rpx;
  padding-bottom:94rpx;
}
.wxParse-inline,.wxParse-span,.wxParse-p,.wxParse-strong{
  font-size:24rpx!important;
}
.act-ppp{
  display:inline-block;
  letter-spacing:2rpx;
  width:104rpx;
}
.act-ppp2{
  width:104rpx;
  display:inline-block;
}
