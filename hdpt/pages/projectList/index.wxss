/* pages/projectList/index.wxss */
page{
  font-size:24rpx;
  line-height: 1;
  color:#333;
  background: #f5f5f5;
}
.fix-box{
  position: fixed;
  left:0;
  top:0;
  width:100%;
  border-top:2rpx solid #e8e8e8;
  background:#fff;
}
.menu-title{
	font-size:30rpx;
	display:flex;
  justify-content:space-between;
  line-height:80rpx;
  margin:0 30rpx;
  height:78rpx;
}
.project-name{
	font-size:28rpx;
	color:#333;
	display:flex;
  justify-content:space-between
}
.project-time{
	font-size:24rpx;
	color:#666;
  margin-left:20rpx;
}
.person{
	color:#666;
  margin:27rpx 0 18rpx 0;
}
.project-type{
	color:#666;
}
.project-list{
	padding:0 30rpx;
	background:#fff;
  padding-top:100rpx;
}
.project-item{
	border-bottom:1rpx solid #e8e8e8;
	padding:27rpx 0;
}
.bg_bot{
	width:20rpx;
	height:20rpx;
	margin-left:14rpx;
}
.bg_img{
	color:#1674bb;
}

.rotateRight{
  transform: rotate(180deg)
}
/*mask*/
.drawer_screen{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 100rpx;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
}

/*content*/
.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 100rpx;
  left: 0;
  z-index: 1001;
  background: #fff;
}
.drawer_content {
  padding-top:30rpx;
  height: 444rpx;
  overflow-y: scroll;
}
.drawer_title{
  padding-bottom: 38rpx;
  font:28rpx "microsoft yahei";
  text-align: center;
}
.line{
  border-bottom: 1px solid #f8f8f8;
}
.selected{
	color:#1674bb;
}
.content-1{
  flex:1
}

.black-page{
  text-align:center;
  padding-top:280rpx;
}
.black-page image{
  width:148rpx;
  height:172rpx;
  margin-bottom:54rpx;
}
.black-page text{
  font-size:28rpx;
  color:#999;
  
}
.line2{
  height:20rpx;
  background: #f5f5f5;
}
.perosn-text2{
  display: inline-block;
  width:104rpx;
}
.perosn-text{
  display: inline-block;
  width:104rpx;
  letter-spacing:2rpx;
}
.bg_2{
  display: none;
}