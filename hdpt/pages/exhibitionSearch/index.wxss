/* pages/exhibitionSearch/index.wxss */
@import "../../style/style.wxss";
page{
  font-size:24rpx;
  line-height: 1;
  color:#333;
}
.con{
	padding:20rpx 30rpx 0;
	display:flex;
  line-height:72rpx;
  font-size:30rpx;
}
.search-left{
	flex:1;
	height:72rpx;
	position:relative;
  margin-right:30rpx;
  background:#ededed;
  border-radius:8px;
}
.search-input{
	margin-left:68rpx;
  height:72rpx;
}
.search-icon{
	position:absolute;
	left:20rpx;
  top:50%;
  width:28rpx;
  height:28rpx;
  line-height:0;
  margin-top:-14rpx;

}

.exhibition-item{
  padding-top:40rpx;
  padding-left:30rpx;
  padding-right:40rpx;
  padding-bottom:27rpx;
  border-bottom:2rpx solid #f1f1f1;
  display: flex;
}
.exhibitionImg{
  width:100rpx;
  height:100rpx;
  margin-right:40rpx;
}
.exhibition-item text{
  font-size:24rpx;
  color:#333;
}
.exhibition-big{
  margin-bottom:16rpx;
}
.exhibition-big text{
  font-size:28rpx;
}
.exhibition-small{
  line-height:40rpx;
}
.app text{
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  white-space:normal;
}
.exhibition-small text{
  color:#666;
}
.black-page{
  text-align:center;
  margin-top:280rpx;
}
.black-page image{
  width:148rpx;
  height:172rpx;
  margin-bottom:54rpx;
}
.black-page text{
  font-size:28rpx;
  color:#999;
  
}
.bg_2{
  display: none;
}