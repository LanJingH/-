/* pages/IntegralRecord/index.wxss */
@import "../../style/style.wxss";
page{
  color:#333;
  font-size:24rpx;
  line-height:1;
}
text{
  display:inline-block;
}
.box{
  padding:20rpx 30rpx 0;
}
.record-titles{
  font-size:28rpx;
  padding-top:64rpx;
  height:174rpx;
  background:#f5f5f5;
  text-align:center;
}
.record-title{
  font-size:28rpx;
  margin-bottom:36rpx;
}
.record-num{
   color:#1674bb;
}
.record-num text{
     vertical-align: middle;
}
.record-weight{
  font-weight: 600;
}
.record-count{
  font-size:60rpx;
  margin-right:26rpx;
  display: inline-block;
 
}
.record-header{
  line-height:88rpx;
  padding-left:30rpx;
  font-size:30rpx;
}
.record-list .record-item:last-child{
  border-bottom:2rpx solid #d8d8d8;
}
.record-item{
  margin:0 30rpx;
  border-top:2rpx solid #d8d8d8;
  border-left: 2rpx solid #d8d8d8;
  border-right: 2rpx solid #d8d8d8;
  padding:23rpx 20rpx;
  display:flex;
  justify-content:space-between;
}
.left-text{
  font-size:28rpx;
}
.left-timer{
  margin-top:16rpx;
  font-size:22rpx;
  color:#999;
}
.item-right{
  line-height:66rpx;
}