/* pages/membershipService/index.wxss */
page{
  background:#f5f5f5;
  color:#333;
  font-size:24rpx;
  line-height:1;
}
swiper,swiper image{
  width:100%;
  height:200rpx;
}
.menu{
   display: flex;
   flex-wrap: wrap;
   padding-left:30rpx;
   padding:28rpx 0;
   background:#fff;
}
.menu-view{
  margin-right:20rpx;
  flex:1;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}
.menuicon{
  width:90rpx;
  height:90rpx;
  margin:0 auto;
  margin-bottom:20rpx;
}
.menutext{
  color:#333;
  text-align:center;
}
.activity{
  padding:0 30rpx;
  background:#fff;
  margin-top:20rpx;
}
.activity-text{
  color:#333;
  line-height:80rpx;
  display:flex;
  justify-content:space-between

}
.activity-title{
  font-size:30rpx;
}
.activity-more{
  color:#666;
}
.activity-item{
  padding-top:26rpx;
  padding-bottom:32rpx;
  border-bottom:2rpx solid #f1f1f1;
  display: flex;
}
 .activity-item:nth-child(2){
  padding-top:0;
} 
.dynamics-item:nth-child(2){
  padding-top:0;
}
.activityImg{
  width:200rpx;
  height:134rpx;
  margin-right:30rpx;
}
.activity-big{
  font-size:28rpx;
  margin-top:8rpx;
}
.app1{
  margin-top:24rpx;
  margin-bottom: 18rpx;
}
.app1 text{
  color:#1674bb;
}

/* 会员动态 */
.dynamics-item{
  padding-top:26rpx;
  padding-bottom:26rpx;
  border-bottom:2rpx solid #f1f1f1;
  display: flex;
  
}
.dynamicsImg{
  width:190rpx;
  height:130rpx;
}
.dynamics-dd{
  margin-left:30rpx;
  position: relative;
  flex:1;
}
.dynamics-ddtext{
  font-size:28rpx;
  line-height:42rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  white-space:normal;
}

.uniontimer{
  position:absolute;
  left:0;
  top:94rpx;
  vertical-align:middle;
}
.uniontimer image{
  width:20rpx;
  height:20rpx;
  margin-right:14rpx;
  vertical-align:middle;
}
.uniontimer text{
  font-size:22rpx;
}
.app3{
  flex:1;
}